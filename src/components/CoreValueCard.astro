---
const { corevalues } = Astro.props;
const { title, description, text, icon } = corevalues;
import { Icon } from "astro-icon/components";
---

<li>
  <Icon name={icon} />
  <h6>{title}</h6>
  <p>{description}</p>
</li>

<style>
  li {
    list-style: none;
    flex-basis: min(400px, 90%);
    flex-shrink: 0;
    background: var(--white);
    color: var(--black);
    border-radius: 2rem;
    padding: 2.75rem 2.1875rem;
  }
</style>
