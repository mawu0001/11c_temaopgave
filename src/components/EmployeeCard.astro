---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const { employee } = Astro.props;
const { img, name, title, description, slug, social_links } = employee;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/images/*.{jpeg,jpg,png,gif}"
);

if (!images[img])
  throw new Error(
    `"${img}" does not exist in glob: "src/assets/images/*.{jpeg,jpg,png,gif}"`
  );
---

<article>
  <figure>
    <!-- skal ind i image tag efter alt >> transition:name={slug}, skal ind på 
     tilsvarende tags på slug siden -->
    <Image src={images[img]()} alt={name} />
    <p>{title}</p>
  </figure>
  <h5><a href="">{name}</a></h5>
  <p>{description}</p>
</article>

<style>
  @layer components {
    article {
      color: var(--card-text);
      background: var(--bg-card);

      figure {
        display: block;
        position: relative;
      }
